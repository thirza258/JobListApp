<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:id="@+id/parent"
    android:layout_margin="25dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="50dp"
    android:background="@color/light_grayish_cyan">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/account"
            android:background="@drawable/cycle"
            android:id="@+id/account"
            android:layout_marginStart="20dp"
            android:elevation="20dp"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account"
            android:id="@+id/relName"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lorem ipsum"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:fontFamily="@font/spartan_semibold"
                android:id="@+id/company"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/company"
                android:text="lorem"
                android:textSize="20sp"
                android:padding="10dp"
                android:background="@drawable/recentbg"
                android:id="@+id/recent"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/spartan_extrabold"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lorem"
                android:id="@+id/ads"
                android:textSize="20sp"
                android:layout_toEndOf="@id/recent"
                android:padding="10dp"
                android:background="@drawable/adsbg"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/spartan_extrabold"
                android:textColor="@color/white"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developer"
            android:textSize="30sp"
            android:fontFamily="@font/spartan_bold"
            android:layout_marginTop="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lorem"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lorem"/>

        </RelativeLayout>

    </LinearLayout>






</androidx.cardview.widget.CardView>